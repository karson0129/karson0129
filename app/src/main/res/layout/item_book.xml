<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/bookId"
        android:layout_width="@dimen/dimension_100"
        android:layout_height="@dimen/dimension_180"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/dimension_10"
        android:layout_marginBottom="@dimen/dimension_10"
        >

    </TextView>

    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bookId"
        app:layout_constraintLeft_toRightOf="@id/bookId"
        android:layout_margin="@dimen/dimension_10"
        >

    </TextView>

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bookName"
        app:layout_constraintLeft_toRightOf="@id/bookId"
        android:layout_margin="@dimen/dimension_10"
        >

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>